<section class="formSection newPost">
  <%= form_with(model: [user, post],local:true) do |form| %>
    <%= form.text_field :title, placeholder:"Post's Title" %>
    <%= form.rich_text_area :text, placeholder: "Post's Text", class:'richText' %>
    <%= form.submit "Create" %>
  <% end %>
  <div>
  <% if flash[:success] %>
  <div class="success">
<i class="fa-solid fa-thumbs-up" style="color: #27511f;"></i>
    <%= flash[:success] %>
  </div>
<% end %>
  <% if flash[:wrong] %>
  <div class="wrong">
  <i class="fa-solid fa-thumbs-down" style="color: #f5260f;"></i>
    <%= flash[:wrong] %>
  </div>
<% end %>
  </div>
</section>
