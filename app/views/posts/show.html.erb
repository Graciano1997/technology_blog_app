<div class="postContainer borderRadio">
<%= render partial: "posts/post_head", locals:{user:@user,post:@post_item,id:@id}%>
<div class="postDescription">
<%= @post_item.text%>
</div>
</div>
<div class="comments">
<% @post_item.show_post_comments(@post_item,all_comments:true).each do |comment|%>
<%= render partial: "comments/comment", locals: {comment:comment, user:@user.find_user(comment.user_id)}%>
<%end%>
</div>