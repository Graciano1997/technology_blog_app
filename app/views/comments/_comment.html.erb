<% if(comment.user_id==session[:user]["id"])%>  
<div class="authorCommentItemContainer">
<%else%>
<div class="commentItemContainer">
<%end%>
<%if(comment.text.size>0) %>
<%if(comment.post.author_id==session[:user]["id"])%>
 <p id="commentor">Author:</p>
<%else%>
 <p id="commentor"><%=user.name%>:</p>
 <%end%>
<p id="commentText"><%= comment.text%></p>
<%else%>
 <p id="commentor"><%="None!"%>:</p>
<%end%>
</div>
<div class="trashContainer">
<% if(comment.user_id==session[:user]["id"] || session[:user]["role"].to_s.eql?("admin"))%>
 <%= render partial:"comments/delete", locals: {comment:comment}%>
<%end%>
</div>