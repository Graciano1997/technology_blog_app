<%= render partial: "users/user", locals: {user: @user}%>
<div class="userInformation">
<%@user.user_recent_posts.each_with_index do |post,index|%>
<%= render partial: "posts/post", locals: {user: @user,post: post, index: index}%>
<%end%>
</div>

<% if(!@user.user_recent_posts.count.zero?)%>
<div class="seeAll">
<a href=<%="/users/#{params[:id]}/posts"%>><button type="button"> See all posts</button></a>
</div>
<%end%>
